<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.lach0192.secretMessenger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <feature name="HandleOpenUrl">
        <param name="ios-package" value="CDVHandleOpenURL" />
        <param name="onload" value="true" />
    </feature>
    <feature name="IntentAndNavigationFilter">
        <param name="ios-package" value="CDVIntentAndNavigationFilter" />
        <param name="onload" value="true" />
    </feature>
    <feature name="GestureHandler">
        <param name="ios-package" value="CDVGestureHandler" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Camera">
        <param name="ios-package" value="CDVCamera" />
    </feature>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>SecretMessengerEricChristain</name>
    <description> An iOS cordova messenger app for encrypting secret messages into pictures. </description>
    <author email="lach0192@algonqiunlive.com" href="http://algonquincollege.com"> Eric Lachapelle / Christian Jurt </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon height="180" src="resources/ios/Icon-App-60x60@3x.png" width="180" />
    <icon height="60" src="resources/ios/Icon-App-60x60@1x.png" width="60" />
    <icon height="120" src="resources/ios/Icon-App-60x60@2x.png" width="120" />
    <icon height="76" src="resources/ios/Icon-App-76x76@1x.png" width="76" />
    <icon height="152" src="resources/ios/Icon-App-76x76@2x.png" width="152" />
    <icon height="40" src="resources/ios/Icon-App-40x40@1x.png" width="40" />
    <icon height="80" src="resources/ios/Icon-App-40x40@2x.png" width="80" />
    <icon height="57" src="resources/ios/Icon-App-57x57@1x.png" width="57" />
    <icon height="72" src="resources/ios/Icon-App-72x72@1x.png" width="72" />
    <icon height="144" src="resources/ios/Icon-App-72x72@2x.png" width="144" />
    <icon height="167" src="resources/ios/Icon-App-83.5x83.5@2x.png" width="167" />
    <splash height="1600" src="resources/ios/XXHDPI-Portrait-960px1600px.png" width="960" />
    <splash height="720" src="resources/ios/XHDPI-Landscape-1280x720px.png" width="1280" />
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="SuppressesLongPressGesture" value="false" />
    <preference name="Suppresses3DTouchGesture" value="false" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <preference name="CameraUsesGeolocation" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
</widget>
