<?xml version='1.0' encoding='utf-8'?>
    <widget id="ca.edumedia.lach0192.secretMessenger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>SecretMessengerEricChristain</name>
        <description> An iOS cordova messenger app for encrypting secret messages into pictures. </description>
        <author email="lach0192@algonqiunlive.com" href="http://algonquincollege.com"> Eric Lachapelle / Christian Jurt </author>
        <content src="index.html" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="5000" />
        <plugin name="cordova-plugin-whitelist" spec="1" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
        </platform>
        <preference name="AutoHideSplashScreen" value="true" />
        
        <preference name="SplashScreenDelay" value="5000" />
        
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <platform name="ios">
            <icon src="resources/ios/Icon-App-60x60@3x.png" width="180" height="180" />
            <icon src="resources/ios/Icon-App-60x60@1x.png" width="60" height="60" />
            <icon src="resources/ios/Icon-App-60x60@2x.png" width="120" height="120" />
            <icon src="resources/ios/Icon-App-76x76@1x.png" width="76" height="76" />
            <icon src="resources/ios/Icon-App-76x76@2x.png" width="152" height="152" />
            <icon src="resources/ios/Icon-App-40x40@1x.png" width="40" height="40" />
            <icon src="resources/ios/Icon-App-40x40@2x.png" width="80" height="80" />
            <icon src="resources/ios/Icon-App-57x57@1x.png" width="57" height="57" />
            <icon src="resources/ios/Icon-App-72x72@1x.png" width="72" height="72" />
            <icon src="resources/ios/Icon-App-72x72@2x.png" width="144" height="144" />
            <icon src="resources/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
            <splash src="resources/ios/XXHDPI-Portrait-960px1600px.png" width="960" height="1600" />
            <splash src="resources/ios/XHDPI-Landscape-1280x720px.png" width="1280" height="720" />
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" /> </platform>
            <preference name="StatusBarOverlaysWebView" value="false" />
            <preference name="StatusBarBackgroundColor" value="#000000" />
    </widget>
